
@{
    ViewBag.Title = "SendSmsMsg";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    string appid = "x";
    string appkey = "x";
    string mobile = "x";
    string extno = "";
    string apiurl = "";
    string msg = "短信内容！！！";
}
@section subscript
{
    <script type="text/javascript">
        $(function () {
            $("#submitbtn").click(function () {
                $.post("/home/SendSmsMsgimp", $("form").serialize(), function (data) {
                    $("#resshow").val(data);
                });
                return false;
            });
        });
    </script>
}
<h3 class="testheader">发送短信</h3>
<div class="form-group">
    <label for="">接口连接:</label>
    <input type="text" name="apiurl" class="form-control" value="@apiurl" />
</div>
<div class="form-group">
    <label for="">AppID:</label>
    <input type="text" name="appid" class="form-control" value="@appid" />
</div>
<div class="form-group">
    <label for="">AppKey:</label>
    <input type="text" name="appkey" class="form-control" value="@appkey" />
</div>
<div class="form-group">
    <label for="">手机:<span class="label label-danger" >多个号码用英文逗号隔开</span></label>
    <input type="text" name="mobile" class="form-control" value="@mobile" />
</div>
<div class="form-group">
    <label for="">扩展:</label>
    <input type="text" name="extno" class="form-control" value="@extno" />
</div>
<div class="form-group">
    <label for="">内容:</label>
    <textarea class="form-control" style="height:180px;" name="msg">@msg</textarea>
</div>
